@page "/stadium-status"

<div class="dashboard-bg">
    <div class="container">
        <div class="dashboard-header">
            <h2>Stadium Infrastructure</h2>
            <p class="text-info">Mainframe: Operational</p>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="card">
                    <h6 class="text-uppercase text-info"><i class="fas fa-thermometer-half"></i> Field Conditions</h6>
                    <hr class="opacity-25" />
                    <div class="d-flex justify-content-around text-center">
                        <div>
                            <div class="display-6">18°C</div>
                            <div class="small opacity-50">Turf Temp</div>
                        </div>
                        <div>
                            <div class="display-6">62%</div>
                            <div class="small opacity-50">Humidity</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <h6 class="text-uppercase text-info"><i class="fas fa-users"></i> Attendance Tracking</h6>
                    <hr class="opacity-25" />
                    <div class="progress mb-2" style="height: 10px; background: rgba(255,255,255,0.1);">
                        <div class="progress-bar bg-info" style="width: 85%"></div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>42,500 / 50,000</span>
                        <span class="text-success">85% Capacity</span>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="card ai-report">
                    <h6 class="text-info"><i class="fas fa-terminal"></i> System Logs</h6>
                    <div class="small">
                        <div class="text-success">[09:00] AI Model 'VANGUARD' Loaded.</div>
                        <div class="text-white">[09:15] Stadium 5G Mesh: Online.</div>
                        <div class="text-warning">[09:42] High latency detected in Sector B Camera.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>